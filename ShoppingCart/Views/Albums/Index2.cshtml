                                <th class="text-secondary opacity-7"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    <div class="d-flex px-2 py-1">
                                        <div>
                                            <img src="~/Content/Admin/assets/img/team-2.jpg"class="avatar avatar-sm me-3" alt="user1" />
                                            
                                        </div>
                                        <div class="d-flex flex-column justify-content-center">
                                            <h6 class="mb-0 text-sm">@Html.DisplayFor(modelItem => item.Artist.Name)</h6>
                                            <p class="text-xs text-secondary mb-0"></p>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <p class="text-xs font-weight-bold mb-0">@Html.DisplayFor(modelItem => item.Genre.Name)</p>
                                    <p class="text-xs text-secondary mb-0">Organization</p>
                                </td>
                                <td class="align-middle text-center text-sm">
                                    <span class="badge badge-sm bg-gradient-success">@Html.DisplayFor(modelItem => item.Title)</span>
                                </td>
                                <td class="align-middle text-center">
                                    <span class="text-secondary text-xs font-weight-bold">@Html.DisplayFor(modelItem => item.Price)</span>
                                </td>

                                <td class="align-middle">
                                    <a href="javascript:;" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">
                                        @Html.ActionLink("Edit", "Edit", new { id = item.ArtistId }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.ArtistId }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.ArtistId })

                                    </a>
                                </td>
                            </tr>
                            }

                        </tbody>
                    </table>
                </div>
